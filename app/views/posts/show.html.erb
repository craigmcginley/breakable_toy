<h1><%= @post.title %></h1>
By: <%= image_tag @post.user.avatar.thumb %> <%= @post.user.first_name %>
<% if @post.user == current_user %>
  <div>
    <%= link_to "Edit", edit_post_path(@post) %>
  </div>
<% end %>
<div>
  <p><%= @post.body %></p>
</div>

<% @post.post_images.each do |img| %>
  <div>
    <%= img.title %>
    <%= image_tag img.url %>
  </div>
<% end %>

<% @post.post_videos.each do |vid| %>
  <div>
    <%= vid.title %>
    <iframe width="420" height="315" src="http://www.youtube.com/embed/<%= vid.url %>" frameborder="0"></iframe>
  </div>
<% end %>

<h4>Comment</h4>
<%= simple_form_for [@post, @comment] do |f| %>
    <%= f.input :body, label: nil %>
    <%= f.submit "Comment" %>
<% end %>

<% @post.comments.order('created_at DESC').each do |comment| %>
  <div class="comment">
    <%= comment.user.first_name %>
    <p><%= comment.body %></p>
    <% if comment.user == current_user %>
      <%= link_to "Edit", edit_comment_path(comment) %>
    <% end %>
    <% if current_user.deletable_comment?(comment) %>
      <%= link_to "Delete", comment_path(comment), method: :delete, data: {confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
