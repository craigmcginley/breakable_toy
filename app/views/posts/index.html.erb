<h1>Posts!</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <h3><%= link_to post.title, post_path(post) %></h3>
      <div><%= image_tag post.user.avatar.thumb %> <%= post.user.first_name %></div>
      <% post.post_images.each do |img| %>
        <%= image_tag img.url.thumb %>
      <% end %>
    </li>
  <% end %>
</ul>
